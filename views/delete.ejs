            <% for(var i = 0; i < docs.length ; i++) { %>
                <tr>
                    <th scope="row"><%= docs[i].roll %></th>
                    <td><%= docs[i].name %></td>
                    <td><%= docs[i].clas %></td>
                    <td><%= docs[i].group %></td>
                    <td><%= docs[i].dob %></td>
